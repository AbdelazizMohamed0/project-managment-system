<div class="max-w-2xl mx-auto">
  <div class="mb-8">
    <%= link_to "← Back to Project", project_path(@project), class: "text-blue-500 hover:text-blue-700" %>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <h1 class="text-3xl font-bold mb-6">Edit Project</h1>

    <%= form_with(model: @project, local: true) do |f| %>
      <% if @project.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <h2 class="font-bold mb-2">
            <%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:
          </h2>
          <ul class="list-disc list-inside">
            <% @project.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_field :name, class: "w-full border rounded px-3 py-2" %>
      </div>

      <div class="mb-4">
        <%= f.label :description, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_area :description, rows: 5, class: "w-full border rounded px-3 py-2" %>
      </div>

      <div class="mb-6">
        <%= f.label :current_status, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.select :current_status, 
            Project::STATUSES,
            { selected: @project.current_status },
            class: "w-full border rounded px-3 py-2" %>
      </div>

      <div class="flex space-x-4">
        <%= f.submit "Update Project", class: "flex-1 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition duration-200" %>
        <%= link_to "Cancel", project_path(@project), class: "flex-1 bg-gray-500 text-white px-4 py-2 rounded text-center hover:bg-gray-600 transition duration-200" %>
      </div>
    <% end %>
  </div>
</div> 