<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="mb-8 flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
    <h1 class="text-3xl font-bold text-gray-900">My Projects</h1>
    <%= link_to "New Project", new_project_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-5 rounded-lg transition duration-200 shadow-sm" %>
  </div>

  <% if @projects.empty? %>
    <div class="text-center py-16 bg-white rounded-xl shadow-lg border border-gray-100">
      <div class="mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      </div>
      <p class="text-gray-500 text-lg mb-4">No projects yet.</p>
      <p>
        <%= link_to "Create your first project", new_project_path, class: "text-blue-500 hover:text-blue-700 font-medium" %>
      </p>
    </div>
  <% else %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @projects.each do |project| %>
        <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-100 hover:shadow-xl transition duration-200">
          <h2 class="text-xl font-bold mb-2 text-gray-900"><%= project.name %></h2>
          <p class="text-gray-600 mb-4 line-clamp-2"><%= project.description %></p>
          <div class="flex items-center justify-between mb-4">
            <div class="text-sm text-gray-500">
              Created by <%= project.user.name %>
            </div>
            <div class="inline-block rounded-full px-3 py-1 text-sm font-semibold shadow-sm
              <%= case project.current_status
                  when 'Not Started' then 'bg-gray-100 text-gray-800 border border-gray-200'
                  when 'In Progress' then 'bg-blue-100 text-blue-800 border border-blue-200'
                  when 'Completed' then 'bg-green-100 text-green-800 border border-green-200'
                  end %>">
              <%= project.current_status %>
            </div>
          </div>
          <div class="mt-4 pt-4 border-t border-gray-100">
            <%= link_to 'View Details', project_path(project), class: 'text-blue-500 hover:text-blue-700 font-medium' %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
