<div class="comment-container p-5 bg-gray-50 rounded-lg border border-gray-100 shadow-sm">
  <div class="comment-header flex items-center mb-3">
    <div class="user-info flex items-center">
      <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center mr-2">
      </div>
      <div>
        <span class="font-semibold text-gray-800"><%= comment.user.name %></span>
        <span class="text-gray-500 text-sm ml-2"><%= time_ago_in_words(comment.created_at) %> ago</span>
      </div>
    </div>
  </div>
  
  <div class="comment-content text-gray-700 ml-10 pl-2 border-l-2 border-gray-200">
    <%= comment.content %>
  </div>

  <% if can? :destroy, comment %>
    <div class="comment-actions mt-3 ml-10 text-right">
      <%= button_to project_comment_path(comment.project, comment), 
          method: :delete,
          class: "text-red-500 hover:text-red-700 text-sm font-medium",
          data: { turbo_confirm: "Are you sure?" } do %>
        Delete
      <% end %>
    </div>
  <% end %>
</div> 